<div class="page-header">
  <h1>Todos los estados</h1>
</div>

<%=  link_to "Crear nuevo post", new_status_path, class:"btn btn-success"  %>

<!--Ciclo para mostrar dinamicamente los estados. Hacemos un ciclo for. |status| es la variable individual -->
<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.nombre %></strong>
    <p><%= status.contenido %></p>
    <div>

      <%=   link_to "Hace " + time_ago_in_words(status.created_at) , status%>
      <span class="admin">
       | <%=link_to "Editar",edit_status_path(status) %> |
        <%=link_to "Borrar",status,method: :delete, data: {confirm: "¿Está seguro que desea eliminar este estado?"} %>
      </span>
    </div>
  </div>
<% end %><!--fin ciclo for-->
